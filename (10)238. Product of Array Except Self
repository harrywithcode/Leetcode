public class Solution {
    public int[] productExceptSelf(int[] nums) {
        int mul = 1;
        int count = 0;
        for(int i = 0; i < nums.length; i++){
            if(nums[i] == 0){
                count++;
                continue;
            }
            else{
                mul = mul*nums[i];
            }
        }
        if(count > 1){
            for(int j = 0; j < nums.length; j++){
                nums[j] = 0;
            }
        }
        if(count == 1){
           for(int j = 0; j < nums.length; j++){
                if(nums[j] == 0){
                    nums[j] = mul;
                }
                else{
                    nums[j] = 0;
                    
                }
            } 
        }
        if(count == 0){
            for(int j = 0; j < nums.length; j++){
                nums[j] = mul / nums[j];
            }
        }
        return nums;
    }
}
